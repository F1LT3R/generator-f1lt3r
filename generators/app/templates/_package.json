{
	"name": "<%= moduleName %>",
    "main": "<%= moduleName %>",
	"version": "1.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},<% if (cli) { %>
		"bin": "lib/cli.js",
		"preferGlobal": true,<% } %>
	"scripts": {
		"test": "xo && yarn run cover",
        "unit": "ava",
        "watch": "ava --watch",
        "cover": "nyc --reporter=lcov --reporter=html --reporter=text ava *.test.js",
        "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v",
        "precommit": "yarn test"
	},
	"files": [
		"index.js"<% if (cli) { %>,
		"cli.js"<% } %>
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
	],
	"dependencies": {<% if (cli) { %>
		"meow": "^3.7.0"
	<% } %>},
	"devDependencies": {
		"ava": "latest",
		"coveralls": "latest",
		"git-hooks": "^1.1.10",
		"git-pre-commit": "^2.1.3",
		"nyc": "latest",
		"xo": "latest"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	},
    "xo": {
        "esnext": true,
        "semicolon": false,
        "globals": [
            "__dirname"
        ],
        "rules": {
            "no-console": 1,
            "space-before-function-paren": 0
        }
    },
    "ava": {
        "failFast": true
    }
}
